> sigma <- foo^(abs(col(foo)-row(foo)))
> mu <- sample(10:20, p)
> mu2 <- mu[p]
> 
> # Create the chains
> mvn.gibbs <- stableGR:::mvn.gibbs
> out.gibbs1 <- mvn.gibbs(N = N, mu = mu, sigma = sigma, p = p)
